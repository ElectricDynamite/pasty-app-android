<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget32"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
	android:id="@+id/tvPasty"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/helptext_PastyActivity_pasty"
	android:layout_centerHorizontal="true"
	android:layout_alignParentTop="true" />
<EditText
	android:id="@+id/NewClip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="@string/NewClip_hint"
	android:textSize="18sp"
	android:layout_below="@+id/tvPasty"
	android:layout_centerHorizontal="true" />
<Button
	android:id="@+id/PastyButton"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/PastyButton_label"
	android:layout_centerHorizontal="true"
	android:layout_below="@+id/NewClip" />
<TextView
	android:id="@+id/tvCopy"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/helptext_PastyActivity_copy"
	android:layout_below="@+id/PastyButton"
	android:layout_centerHorizontal="true"
	android:layout_alignLeft="@+id/myTableLayout" />
<TextView
	android:id="@+id/tv_loading"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/helptext_PastyActivity_loading"
	android:layout_below="@+id/tvCopy"
	android:layout_centerHorizontal="true"
	android:layout_alignLeft="@+id/textview2" />
<ProgressBar
	android:id="@+id/progressbar_downloading"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:indeterminate="true"
	android:layout_below="@+id/tv_loading"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="40dp" />
<ScrollView
	android:layout_below="@+id/tvCopy"
	android:layout_centerHorizontal="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
<TableLayout
	android:id="@+id/tableClips"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
</TableLayout>
</ScrollView>
</RelativeLayout>
